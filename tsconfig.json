{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "~UI/*": [
                "src/UI/*"
            ],
            "~components/*": [
                "src/components/*"
            ],
            "~constants/*": [
                "src/constants/*"
            ],
            "~store/*": [
                "src/store/*"
            ],
            "~types/*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}